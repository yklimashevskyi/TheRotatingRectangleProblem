@model Derivco.FullStack.Assignment.Web.ViewModels.ParemetersViewModel
@{
  ViewBag.Title = "Home Page";
}

<form asp-controller="Home" asp-action="CalculateSolution" method="post" role="form" class="form-inline">
  <div asp-validation-summary="All" class="text-danger"></div>
  <div class="form-group">
    <label asp-for="RectangleCount" class="control-label"></label>
    <div>
      <div>
        <input type="range" min="3" max="30" class="form-control" onchange="$('#RectangleCount').val($(this).val())" value="@Model.RectangleCount" aria-describedby="RectangleCount"/>
        <input asp-for="RectangleCount" class="form-control"/>
      </div>
      <span asp-validation-for="RectangleCount" class="text-danger"></span>
    </div>
  </div>
  <div>
    <button type="submit" class="btn btn-default">Solve</button>
  </div>
</form>